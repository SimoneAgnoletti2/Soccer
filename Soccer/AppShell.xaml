        <ShellContent Route="ClassificheGiocatori"
                      Title="Classifiche Giocatori"
                      Icon="ladder"
                      ContentTemplate="{DataTemplate views:ClassificheGiocatori}" />

            <ShellContent Route="Impostazioni"
